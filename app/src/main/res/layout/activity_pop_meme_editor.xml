<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="gmsyrimis.c4q.nyc.cammy.PopMemeEditor"
    android:background="@drawable/backgroundfinal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear_pop_layout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SATURDAY"
            android:textColor="#ffffff"
            android:textSize="40dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:id="@+id/top_pop"
            android:capitalize="characters"/>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:background="#383838"
        android:layout_centerInParent="true"
        android:id="@+id/iv_custom_popular"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EAT POPCORN"
        android:textColor="#ffffff"
        android:layout_marginTop="-60dp"
        android:textSize="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginBottom="75dp"
        android:id="@+id/bottom_pop"
        android:capitalize="characters"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linear_pop_layout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/bt_save_popo"
            style="@style/sciCal"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share"
            android:id="@+id/bt_share_popo"
            style="@style/sciCal"/>

    </LinearLayout>

</RelativeLayout>
