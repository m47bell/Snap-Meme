<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical"
    android:background="@drawable/backgroundfinal"
    tools:context="gmsyrimis.c4q.nyc.cammy.DemotivationalActivity">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="380dp"
        android:orientation="vertical"
        android:id="@+id/demotivational_holder"
        android:background="#000000"
        >
    <ImageView
        android:layout_width="330dp"
        android:layout_height="210dp"
        android:id="@+id/demotivational_custom_image"
        android:background="#383838"
        android:layout_gravity="center"
        android:layout_marginTop="55dp"/>
    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="COLLEGE GRADUATE"
        android:hint="Do not Click"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/demotivational_top_text"/>
    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="can't tie his shoes"
        android:textSize="20dp"
        android:hint="I will crach"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/demotivational_bottom_text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        style="@style/sciCal"
        android:id="@+id/share_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        style="@style/sciCal"
        android:id="@+id/save_btn" />

  </LinearLayout>

</LinearLayout>
